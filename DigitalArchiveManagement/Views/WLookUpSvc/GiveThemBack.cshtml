@section body {
    <div class="container-fluid">
        <div class="row" style="padding:5px;"></div>
        <div class="row" style="padding:0 8px 0 8px;">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">借出信息</h3>
                </div>
