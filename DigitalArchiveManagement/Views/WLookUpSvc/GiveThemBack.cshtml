        function operateFormatter0(value, row, index) {
            if (row.beReturned == '1') {//已归还
                return [
                    '<button type="button" class="RoleOfRestore btn btn-sm  btn-info" title="点击还挡" disabled><i class="glyphicon glyphicon-inbox" ></i></button>'
