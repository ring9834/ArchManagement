            });
        }

        //查看原文
        window.operateEvents = {
            'click .RoleOfRestore': function (e, value, row, index) {
                restoreArch(row);
            },
            'click .RoleOfProlong': function (e, value, row, index) {
                prolongArchView(row);
            },
